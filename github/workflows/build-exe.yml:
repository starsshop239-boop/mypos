name: Build Advanced POS EXE

on:
  push:
    branches: [main]

jobs:
  build:
    runs-on: windows-latest

    steps:
    - uses: actions/checkout@v3

    - name: Setup Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.11'

    - name: Install Dependencies
      run: |
        python -m pip install --upgrade pip
        pip install pyinstaller

    - name: Build EXE
      run: |
        pyinstaller --onefile --add-data "pos2.db;." main.py

    - name: Upload EXE
      uses: actions/upload-artifact@v3
      with:
        name: AdvancedPOS-EXE
        path: dist/main.exe
